<Window x:Class="QuanLiNhanVien.View.Notification.CreateNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLiNhanVien.View.Notification"
        mc:Ignorable="d"
        Title="CreateNotification" Height="250" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Title:"/>
            <TextBox x:Name="TitleTextBox" Width="250" Height="30" Margin="0,5"/>

            <TextBlock Text="Content:"/>
            <TextBox x:Name="ContentTextBox" Width="250" Height="70" Margin="0,5"/>
            <Button Content="Create" Width="100" Margin="10 15 0 0" Height="30" Click="CreateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
